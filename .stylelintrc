{
  "extends": "stylelint-config-recommended",
  "rules": {
    "font-family-no-missing-generic-family-keyword": null,
    "no-duplicate-selectors": null,
    "selector-type-no-unknown": [
      true,
      {
        "ignoreTypes": [
          "/POSTCSS_.*/"
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx"
      ],
      "customSyntax": "postcss-styled-components"
    }
  ]
}
