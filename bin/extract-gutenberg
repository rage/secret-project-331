#!/bin/bash
set -euo pipefail
source "$(dirname "$0")/.common"

BASEDIR="$(dirname "${BASH_SOURCE[0]}")"

CMS_PATH="$BASEDIR/../services/cms/"

RELATIVE_CMS_PATH=$(realpath --relative-to="$(pwd)" "$CMS_PATH")

run_command cd "$RELATIVE_CMS_PATH" || exit
run_command npm run extract-gutenberg-types

run_command cd ../..
if [ -f "./services/course-material/src/types/GutenbergBlockAttributes.guard.ts" ]; then
  run_command rm ./services/course-material/src/types/GutenbergBlockAttributes.guard.ts
fi

run_command npx ts-auto-guard --export-all --paths services/course-material/src/types/GutenbergBlockAttributes.ts --project services/course-material/tsconfig.json
run_command sed -i '1s;^;/* eslint-disable @typescript-eslint/no-explicit-any */\n/* eslint-disable @typescript-eslint/explicit-module-boundary-types */\n\n;' services/course-material/src/types/GutenbergBlockAttributes.guard.ts
run_command npx eslint --fix services/course-material/src/types/GutenbergBlockAttributes.ts services/course-material/src/types/GutenbergBlockAttributes.guard.ts
