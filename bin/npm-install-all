#!/bin/bash
set -euo pipefail
source "$(dirname "$0")/.common"

if [ -z ${1+x} ]
  then
    echo "Please give the package to install as the first argument."
    exit 1
fi

PACKAGE=$1

run_command npx concurrently -n "cms,course-material,main-frontend,example-exercise,shared-module,quizzes" -c "green.bold,red.bold,blue.bold,yellow.bold,purple.bold,magenta.bold,cyan.bold" "bash -c 'cd services/cms/ && npm install ${PACKAGE}'" "bash -c 'cd services/course-material/ && npm install ${PACKAGE}'" "bash -c 'cd services/main-frontend && npm install ${PACKAGE}'" "bash -c 'cd services/example-exercise && npm install ${PACKAGE}'" "bash -c 'cd shared-module && npm install ${PACKAGE}'" "bash -c 'cd services/quizzes/ && npm install ${PACKAGE}'"

echo "finished"
