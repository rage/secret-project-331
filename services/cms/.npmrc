# pnpm configuration for CMS service
# Enable npm compatibility mode
node-linker=hoisted
# Enable strict peer dependencies
strict-peer-dependencies=false
# Auto install peer dependencies
auto-install-peers=true
# Use hard links for better performance
link-workspace-packages=true
# Store packages in a global store
store-dir=~/.pnpm-store
# Enable side-effects cache
side-effects-cache=true
# Use symlinks for node_modules
symlink=true
# Enable hoisting for better compatibility
hoist=true
# Enable shamefully-hoist for packages that don't work well with pnpm
shamefully-hoist=true
# Enable npm compatibility mode
enable-pre-post-scripts=true
frozen-lockfile=true
